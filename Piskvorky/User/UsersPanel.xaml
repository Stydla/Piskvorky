<UserControl x:Class="Piskvorky.User.UsersPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Piskvorky.User"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition></ColumnDefinition>
      <ColumnDefinition></ColumnDefinition>
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition Height="80"></RowDefinition>
      <RowDefinition></RowDefinition>
    </Grid.RowDefinitions>

    <local:UserRegistration Grid.Row="0" Grid.Column="0"></local:UserRegistration>
    <local:UserList Grid.Row="1" Grid.Column="0"></local:UserList>

    <local:GamesList Grid.Column="1" Grid.RowSpan="2"></local:GamesList>
    
    </Grid>
</UserControl>
