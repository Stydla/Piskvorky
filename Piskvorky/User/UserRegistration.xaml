<UserControl x:Class="Piskvorky.User.UserRegistration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Piskvorky.User"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition></ColumnDefinition>
      <ColumnDefinition></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition></RowDefinition>
      <RowDefinition></RowDefinition>
      <RowDefinition></RowDefinition>
    </Grid.RowDefinitions>
    
    <TextBlock Grid.Column="0" Grid.Row="0" Text="Nickname:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
    <TextBox x:Name="tbNickname" Grid.Column="1" Grid.Row="0" VerticalContentAlignment="Center" Text="test"/>

    <TextBlock Grid.Column="0" Grid.Row="1" Text="email:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
    <TextBox x:Name="tbEmail" Grid.Column="1" Grid.Row="1" VerticalContentAlignment="Center" Text="test@test.com"/>

    <Button Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Content="Create" Click="Button_Click"></Button>

  </Grid>
</UserControl>
